extends layout

block title
    title Landing Page
block css
    link(rel='stylesheet', type='text/css', href='/css/styles.css')
    link(href='css/landing-page.css', rel='stylesheet')
    link(href='http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic', rel='stylesheet', type='text/css')
    script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
    script(src='https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js')


block content
    // Header
    a(name='about')
    .intro-header
        .container
            .row
                .col-lg-12
                    .intro-message
                        h1 Flight Planner
                        h3 Welcome
                        hr.intro-divider
                        ul.list-inline.intro-social-buttons
                            li
                                a.btn.btn-default.btn-lg(href='/login', data-transition='pop')
                                    i.fa.fa-twitter.fa-fw
                                    span.network-name Login
                            li
                                a.btn.btn-default.btn-lg(href='/signup', data-transition='pop')
                                    i.fa.fa-github.fa-fw
                                    span.network-name Sign Up
                            li
                                a.btn.btn-default.btn-lg(href='/map', data-transition='pop')
                                    i.fa.fa-linkedin.fa-fw
                                    span.network-name Map


    include footer

